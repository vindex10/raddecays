SRC:=$(realpath $(dir $(lastword $(MAKEFILE_LIST))))
BUILD:=$(SRC)/build

,:=,
sp:= 

MKDIR:=mkdir -p
CP:=cp -rfi
RM:=-rm -rfi

FLAGS:=-std=c++14 -O3 # put -O3 here when ready

INCLUDE_PATH:=-I/usr/include/eigen3 -I$(BUILD)/include -I$(SRC)
LIBRARY_PATH:=-L$(BUILD)/lib -L$(BUILD)/lib64

CC=g++ -c $(FLAGS) $(INCLUDE_PATH)
LINK=g++ $(FLAGS) $(INCLUDE_PATH) $(LIBRARY_PATH) $(patsubst -L%,-Wl$(,)-rpath$(,)%,$(LIBRARY_PATH))

